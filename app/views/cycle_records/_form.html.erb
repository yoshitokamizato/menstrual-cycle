<%= form_with model: @cycle_record, local: true do |form| %>
  <div class="form-group cycle-date-form">
    <%= form.label :date, class: 'control-label' %>
    <%= form.text_field :date, value: @cycle_record.date, class: 'form-control bg-white', id: 'cycle_record_date' %>
  </div>
  <div class="form-group cycle-weight-form">
    <%= form.label :body_temperature, class: 'control-label' %>
    <div class="form-row">
      <div class="col-10">
        <%= form.number_field :body_temperature, class: 'form-control', in: 20.0..50.0, step: '0.1' %>
      </div>
      <div class="col-2 my-auto">
        <span>â„ƒ</span>
      </div>
    </div>
  </div>

  <div class="form-group cycle-weight-form">
    <%= form.label :body_weight, class: 'control-label' %>
    <div class="form-row">
      <div class="col-10">
        <%= form.number_field :body_weight, class: 'form-control', in: 10.0..300.0, step: '0.1' %>
      </div>
      <div class="col-2 my-auto">
        <span>kg</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :symptom, class: 'control-label' %>
    <%= form.text_area :symptom, class: 'form-control', rows: 5, required: true %>
  </div>

  <div class="form-group">
    <%= form.submit button_message, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>