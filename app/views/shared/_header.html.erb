<header>
  <nav class="navbar navbar-expand-md navbar-light">
    <%= link_to '生理周期アプリ', root_path, class: 'navbar-brand' %>
    <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto mr-3 d-none d-sm-flex d-md-none">
        <%= current_user.name %>
      </ul>
    <% end %>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="Navber">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown active">
            <a href="#" class="nav-link dropdown-toggle" id="cycle_records_option" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              生理周期記録
            </a>
            <div class="dropdown-menu" aria-labelledby="cycle_records_option">
              <%= link_to "グラフ", cycle_records_path, class: 'dropdown-item' %>
              <%= link_to "動画", movies_path, class: 'dropdown-item' %>
              <%= link_to "コラム", columns_path, class: 'dropdown-item' %>
            </div>
          </li>
          <li class="nav-item dropdown active">
            <a href="#" class="nav-link dropdown-toggle" id="posting_option" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              投稿
            </a>
            <div class="dropdown-menu" aria-labelledby="posting_option">
              <%= link_to "食事投稿一覧へ", meals_path, class: 'dropdown-item' %>
              <%= link_to "運動投稿一覧へ", exercises_path, class: 'dropdown-item' %>
              <%= link_to '独り言', monologues_path, class: 'dropdown-item' %>
            </div>
          </li>
          <li class="nav-item dropdown active">
            <a href="#" class="nav-link dropdown-toggle" id="others_option" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              オプション
            </a>
            <div class="dropdown-menu" aria-labelledby="others_option">
              <%= link_to 'トップページ', root_path, class: 'dropdown-item' %>
              <%= link_to 'アカウント編集', edit_user_registration_path, class: 'dropdown-item', id: 'nav-sign-edit' %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'dropdown-item', id: 'nav-sign-out' %>
            </div>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "ログイン", new_user_session_path, class: 'nav-link', id: 'nav-sign-in' %>
          </li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav text-right">
          <%= current_user.name %>
        </ul>
      <% end %>
    </div>

  </nav>
</header>
