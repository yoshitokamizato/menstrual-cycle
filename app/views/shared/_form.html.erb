<%= form_with model: model, local: true do |f| %>
  <div class="form-group">
    <%= f.select :menstrual_cycle, %w(生理期 卵胞期 黄体期), {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, id: 'image-form', accept: 'image/png, image/jpeg, image/gif' %>
  </div>
  <div class="form-group">
    <%= f.text_area :comment, class: 'form-control', rows: '5' %>
  </div>
  <div class="form-group">
    <%= f.submit value, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>