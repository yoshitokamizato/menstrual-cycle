<div class="container-cycle px-2">
  <%= link_to "食事投稿画面へ", new_meal_path, class: 'btn btn-primary btn-block mb-3' %>
  <%= paginate @meals %>
  <% @meals.each do |meal| %>
    <div class="card my-3">
      <% if meal.image? %>
        <div class="card-header text-center">
          <%= image_tag meal.image.url %>
        </div>
      <% end %>
      <div class="card-body">
        <%= simple_format(h meal.comment) %>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-md-auto col-12">
            【生理周期】<%= meal.menstrual_cycle %>
          </div>
          <div class="col-md-auto col-12">
            【投稿日】<%= l meal.created_at, format: :datetime %>
          </div>
          <div class="col-md col-12 text-right">
            <%= link_to "編集", edit_meal_path(meal) %>
            <%= link_to "削除", meal_path(meal), method: :delete, data: { confirm: "削除しますか？" } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @meals %>
</div>
