<%= form_with model: @periodic_record do |form| %>
  <div class="form-group w-75">
    <%= form.label :date, class: 'control-label' %>
    <%= form.date_field :date, value: Time.now.strftime("%Y-%m-%d"), class: 'form-control' %>
  </div>

  <div class="form-group w-50">
    <%= form.label :body_temperature, class: 'control-label' %>
    <div class="form-row">
      <div class="col-10">
        <%= form.number_field :body_temperature, class: 'form-control', in: 20.0..50.0, step: '0.1' %>
      </div>
      <div class="col-2 my-auto">
        <span>â„ƒ</span>
      </div>
    </div>
  </div>

  <div class="form-group w-50">
    <%= form.label :body_weight, class: 'control-label' %>
    <div class="form-row">
      <div class="col-10">
        <%= form.number_field :body_weight, class: 'form-control', in: 10.0..300.0, step: '0.1' %>
      </div>
      <div class="col-2 my-auto">
        <span>kg</span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :symptom, class: 'control-label' %>
    <%= form.text_field :symptom, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit button_message, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>